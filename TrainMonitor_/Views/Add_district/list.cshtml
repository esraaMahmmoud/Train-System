@using TrainMonitor_.Views.Shared;

@{
    Layout = "~/Views/Shared/_pageLayout.cshtml";
}


<div class="container-fluid text-center">
    <div class="row content">

        <div class="col-sm-12 @web_Resources.t_dir">

            <div class="form-group">
                <h2 style="color:darkgreen">@web_Resources.list</h2>
                <label style="border:thin;color:dimgray;margin-right:50px;font-size:20px">@web_Resources.name_of_district</label>
                <label style="border:thin;color:dimgray;margin-right:50px;font-size:20px">@web_Resources.id_of_district</label>
                <label style="border:thin;color:dimgray;margin-right:50px;font-size:30px">@web_Resources.edit</label>
                <label style="border:thin;color:dimgray;margin-right:50px;font-size:30px">@web_Resources.delete</label>
            </div>
        </div>
    </div>
</div>
