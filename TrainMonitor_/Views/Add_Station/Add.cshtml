@using TrainMonitor_.Views.Shared;
@{
    Layout = "~/Views/Shared/_pageLayout.cshtml";
}



<div class="container-fluid text-center">
    <div class="row content">

        <div class="col-sm-12 @web_Resources.t_dir">
            <form>
                <h2 style="color:darkgreen">@web_Resources.add_station </h2>
                <div class="form-group">
                    <label for="exampleInputEmail1">@web_Resources.name_of_station </label>
                    <input type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Enter Name ">
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">@web_Resources.id_of_station </label>
                    <input type="text" class="form-control" id="id" aria-describedby="emailHelp" placeholder="Enter ID ">
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">@web_Resources.location </label>
                    <input type="text" class="form-control" id="phone" aria-describedby="emailHelp" placeholder="Enter Phone ">
                </div>


                <input class="btn btn-primary" type="reset" value="@web_Resources.reset">
                <button type="submit" class="btn btn-primary">@web_Resources.submit</button>


            </form>
        </div>
    </div>
</div>